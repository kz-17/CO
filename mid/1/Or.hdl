/**
 * Or gate:
 * if (a or b) out = 1, else out = 0 
 */
CHIP Or {
    IN a, b;
    OUT out;

    PARTS:
    // 1. 反轉輸入 a
    Not(in=a, out=notA);

    // 2. 反轉輸入 b
    Not(in=b, out=notB);

    // 3. 將反轉後的 a 與 b 放入 Nand，得到 Or 的結果
    Nand(a=notA, b=notB, out=out);
}

